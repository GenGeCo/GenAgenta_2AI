# GenAgenTa - Apache Configuration

# Abilita rewrite
RewriteEngine On

# Base path
RewriteBase /genagenta/

# Routing API: tutte le richieste /backend/api/* vanno a index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^backend/api/(.*)$ backend/api/index.php [QSA,L]

# Frontend SPA: servi da frontend/dist/
# Asset statici (css, js, immagini)
RewriteRule ^assets/(.*)$ frontend/dist/assets/$1 [L]
RewriteRule ^favicon\.svg$ frontend/dist/favicon.svg [L]

# Tutte le altre richieste (non file, non directory, non backend) vanno a index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/genagenta/backend/
RewriteRule ^(.*)$ frontend/dist/index.html [L]

# Blocca accesso a file sensibili
<FilesMatch "^\.env|\.env\..*$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Blocca accesso a file SQL
<FilesMatch "\.sql$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Blocca accesso a file markdown
<FilesMatch "\.md$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Blocca accesso a cartelle sensibili
RedirectMatch 403 ^/genagenta/database/.*$
RedirectMatch 403 ^/genagenta/backend/config/.*$
RedirectMatch 403 ^/genagenta/backend/includes/.*$

# Headers sicurezza
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>
